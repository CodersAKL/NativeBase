{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "module": "esnext",
    "jsx": "react-native",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "target": "ES5",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "detox", "jasmine", "react-native", "react"],
    "paths": {
      "app/*": ["src/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["src/*", "types.d.ts"],
  "exclude": ["node_modules", "src/__tests__"],
  "compileOnSave": true
}
